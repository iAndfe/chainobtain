    }
   ],
   "source": [
    "# Define the polyline as a list of Point objects\n",
    "polyline = csv_to_polyline('test_poly.csv')\n",
    "\n",
    "points_df = chain_obtain(polyline, 'test_points.csv')"
   ]
  }
